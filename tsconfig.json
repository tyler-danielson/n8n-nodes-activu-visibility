{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2022",
		"lib": ["ES2022"],
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "."
	},
	"include": [
		"nodes/**/*.ts",
		"credentials/**/*.ts"
	],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}
